<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}Panel  | Dashboard{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('assets/image/user.png') }}" />
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/all-skins.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/template-style.css') }}">

    {% endblock %}
</head>

<body class="hold-transition skin-black sidebar-mini">
<div class="wrapper">
    <header class="main-header">
        <a href=#" class="logo">
            <span class="logo-mini"><b>$~$</b></span>
            <span class="logo-lg">GEEK $_$</span>
        </a>
     {% include 'nav.html.twig' %}

    </header>
    {% include 'drawer.html.twig' %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>{% block sub_title %}Page{% endblock %}</h1>
                {% if app.request.hasPreviousSession %}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        {% if type == "error_handle" %}
                            <div class="alert alert-danger alert-dismissible flash-{{ type }}">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4><i class="icon fa fa-check"></i> Erreur</h4>
                                {{ message }}
                            </div>
                        {% else %}
                            <div class="alert alert-success alert-dismissible flash-{{ type }}">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4><i class="icon fa fa-check"></i> Success</h4>
                                {{ message }}
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            {% endif %}
        </section>
        <section class="content">
            {% block content %}
            {% endblock %}
        </section>
    </div>
</div>
{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            var url = window.location;
            var element = $('ul.sidebar-menu a').filter(function () {
                return this.href == url || url.href.indexOf(this.href) == 0;
            });
            $(element).parentsUntil('ul.sidebar-menu', 'li').addClass('active');
        });
    </script>
    <script src="{{ asset('assets/js/jquery-2.2.4.min.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/jquery.slimscroll.min.js') }}"></script>
    <script src="{{ asset('assets/js/app.min.js') }}"></script>


{% endblock %}

</body>
</html>
